page{
  height: 100%;
}

.titleView{
  height: 8%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.title{
  font-size: x-large;
}

.all{
  height: 50%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.inputView{
  height: 45%;
  width: 90%;
  background-color: whitesmoke;
  border-radius: 20px;
  display: flex;
  flex-direction: column;
}

.outputView{
  height: 30%;
  width: 90%;
  background-color: whitesmoke;
  border-radius: 20px;
  display: flex;
  flex-direction: column;
}

.introduce{
  margin-left: 30rpx;
  margin-top: 20rpx;
  font-size: larger;
}

.upblockView{
  height: 25%;
  width: 90%;
  display: flex;
  flex-direction: row;
}

.downblockView{
  height: 30%;
  width: 90%;
  display: flex;
  flex-direction: row;
}

.textClass{
  margin-left: 30rpx;
  margin-top: 14rpx;
  font-size: larger;
}

