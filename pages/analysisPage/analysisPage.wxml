<block wx:for="{{Datalist}}" wx:key="*this">
  <view class="bodyView">
    <view class="leftView">
      <image src="{{item.protraitPath}}" class="thePortrait"></image>
    </view>
    <view class="rightView">
      <view class="nameView">
        <text class="theName">{{item.name}}</text>
      </view>
      <view class="contextView">
        <text class="theText">{{item.text}}</text>
      </view>
      <view class="picView">
        <block wx:for="{{item.picPath}}" wx:for-item="path" wx:key="*this">
          <image src="{{path}}" class="thePic" bindtap="picClicked" data-name="{{path}}"></image>
        </block>
      </view>
      <view class="funcView">
        <text class="theTime">{{item.time}}</text>
        <view class="iconView">
          <text class='xNum'>{{item.num}}</text>
          <text class='x'>x</text>
          <image src="/images/commend.png" class="icon" bindtap="favouriteClicked" data-name="{{item._id}}"></image>
        </view>
      </view>
    </view>
  </view>
</block>
