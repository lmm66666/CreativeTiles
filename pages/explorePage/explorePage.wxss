}

.all{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}


.iconBar{
  height: 12%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 40rpx;
}

.iconView{
  height: 100%;
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 14rpx;
}

.icon{
  height: 96rpx;
  width: 60%;
}

.iconText{
  height: 40rpx;
  width: 60%;
  font-size: 22rpx;
  margin: 3px;
  align-self: center;
}

.titleView{
  height: 80rpx;
  width: 100%;
  background: whitesmoke;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.title{
  font-size: 40rpx;
}

.titleImg{
  height: 70rpx;
  width: 10%;
  margin: 10rpx;
}



.swiperView{
  height: 88%;
  width: 100%;
}

.theContainer{
  height: 1200rpx;
  width: 100%;
