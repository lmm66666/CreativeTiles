  margin-top: 50rpx;
}

.nameText{
  font-size: x-large;
}

.pic1{
  height: 40%;
  width: 92%;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  border-radius: 10px;
}

.introduce{
  font-size: medium;
  align-self: flex-start;
  margin-left: 20rpx;
}

.downView{
  height: 40%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.unitView{
  height: 300rpx;
  width: 30%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  margin: 30rpx;
}

.tilePic{
  height:150rpx;
