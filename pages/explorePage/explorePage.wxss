page{
  height: 100%;
}

.theSwiper{
  width: 100%;
  height: 30%;
  display: flex;
  margin-top: 20rpx;
}

.swiperView{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.swiperImage{
  width: 95%;
  height: 100%;
  border-radius: 15px;
}

.iconBar{
  height: 12%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.iconView{
  height: 100%;
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 14rpx;
}

.icon{
  height: 96rpx;
  width: 60%;
}

.iconText{
  height: 40rpx;
  width: 60%;
  font-size: 22rpx;
  margin: 3px;
  align-self: center;
}

.titleView{
  height: 80rpx;
  width: 100%;
  background: whitesmoke;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.title{
  font-size: 40rpx;
}

.titleImg{
  height: 70rpx;
  width: 10%;
  margin: 10rpx;
}

.image{
  height: 180rpx;
  width: 80%;
  border-radius: 4px;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.doubleView{
  height: 300rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: whitesmoke;
}

.theView{
  height: 280rpx;
  width: 48%;
  display: flex;
  flex-direction: column;
  margin: 15rpx;
  background: white; 
  border-radius: 10px;
  align-items: center;
}

.theView_textView{
  border-radius: 5px;
  background: wheat;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.theView_text{
  font-size: 26rpx;
  color: orange;
  margin: 4rpx;
}

.blank{
  height: 10rpx;
  width: 100%;
  background: whitesmoke;
}