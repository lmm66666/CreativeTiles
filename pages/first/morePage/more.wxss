/* pages/detailPage/detailPage.wxss */
page{
  height: 100%;
}

.textView{
  height: 6%;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  line-height:1.41176471
}

.leftTextView{
  height: 100%;
  width: 78%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 2%;
}

.leftText{
  font-size: medium;
  color: gray;
}

.rightText{
  margin-left: 5%;
  font-size: large;
}

.yLine{
  height: 100%;
  width: 2rpx;
  background-color: whitesmoke;
}

.xLine{
  height: 2rpx;
  width: 100%;
  background-color: whitesmoke;
}

.theScoller{
  height: 94%;
  width: 100%;
}

.theScollerView{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 5rpx;
}

.tileUnitView{
  height: 500rpx;
  width: 47%;
  margin-left: 2%;
}

.tileImg{
  height: 66%;
  width: 100%;
  background-color: whitesmoke;
  border-radius: 5px;
}

.tileNameView{
  height: 10%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.tileName{
  margin-left: 10rpx;
  font-size: medium;
}

.heartImg{
  height: 36rpx;
  width: 36rpx;
  margin-right: 10rpx;
}

.tileDetailView{
  height: 20%;
  width: 100%;
  font-size: xx-small;
  display: flex;
  flex-direction: column;
  color: gray;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.tileCode{
  font-size: 10px;
}

.searchIcon{
  height: 100rpx;
  width: 100rpx;
  position:fixed;
  right: 50rpx;
  bottom: 100rpx;
}