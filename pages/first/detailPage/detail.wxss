page{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: whitesmoke;
}

.show-img{
  height: 500rpx;
  width: 700rpx;
  margin-top: 30rpx;
  border-radius: 5px;
}

.down-view{
  width: 700rpx;
  background-color: white;
  border-radius: 10px;
  margin-top: 30rpx;
}

.detail-title-view{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: medium;
}

.title-text{
  color: gray;
  margin-left: 60rpx;
}

.title-ans-text{
  color: black;
  margin-right: 60rpx;
}

.seperate-view{
  height: 1rpx;
  width: 100%;
  background-color: gray;
}


.detail-view{
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: small;
}

.detail-text{
  color: gray;
  margin-left: 60rpx;
}

.detail-ans-text{
  color: black;
  margin-right: 60rpx;
}